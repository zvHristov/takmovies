{
  "cli": {
    "version": ">= 11.0.3"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "image": "latest"
      },
      "ios": {
        "image": "latest"
      }
    },
    "development-simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "main",
      "android": {
        "package": "com.movies.netflix",
        "image": "latest",
        "googleServicesFile": "./google-services.json",
        "env":{ 
          "EXPO_PUBLIC_API_URL": "localhost:8000/api/v1/"
         }
      },
      "ios": {
        "image": "latest",
        "googleServicesFile": "./GoogleService-Info.plist",
        "env":{ 
          "EXPO_PUBLIC_API_URL": "localhost:8000/api/v1/"
         }
      }
    },
    "production": {
      "channel": "production",
      "android": {
        "image": "latest"
      },
      "ios": {
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
